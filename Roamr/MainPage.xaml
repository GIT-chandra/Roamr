<Page
    x:Class="Roamr.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Roamr"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
   

    <Grid>
       
        <ListView ItemsSource="{Binding docs}"
                  Name="Display"
                  Margin="20,90,20,0"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Rectangle Fill="#7ac143"
                                   Height="2"
                                   Width="auto"
                                   Opacity="0.8"
                                   VerticalAlignment="Bottom"/>
                        <StackPanel Margin="5,5,15,5">
                            <TextBlock Text="{Binding title}"
                                       Width="440"
                                   FontSize="20"
                                   Foreground="#006699"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="City :"
                                           Foreground="LightGray"
                                       FontSize="19"/>
                                <TextBlock Text="{Binding cityName}"
                                       FontSize="19"
                                           Margin="5,0,0,0"/>
                                <TextBlock Text="Price :"
                                           Foreground="LightGray"
                                       FontSize="19"
                                       HorizontalAlignment="Right"
                                       Margin="40,0,5,0"/>                                
                                <TextBlock Text="{Binding attribute_Price}"
                                       FontSize="19"
                                       HorizontalAlignment="Right"/>
                                
                            </StackPanel>                           

                        </StackPanel>

                        <TextBlock Tag="{Binding url}"
                                   Tapped="TextBlock_Tapped"/>

                    </Grid>
                    
                    
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center">
            <Button Content="Shop around"
                    Click="Button_Click"
                    Name="Butn1"/>
            
            <Button Name="Options"
                    Grid.Column="0"
                    Content="+ options"
                    Click="Button_Click_1"
                    Width="40"
                    Margin="20,0,0,0">
                <!--<Button.Template>
                    <ControlTemplate>
                        <Grid Width="45"
                              Height="45"
                              Background="#006699"
                              Name="ColorBox">
                            <Image Source="/Assets/hmburg.png"
                                Stretch="Fill"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>-->
            </Button>
                
           
            
            <!--<Grid Background="#006699"
                  Width="50"
                  Height="50"
                  Margin="20,0,0,0"
                  Name="Options">
                
            </Grid>-->
        </StackPanel>


        
        
        
        <Grid Margin="20,90,20,0"
              Visibility="Collapsed"
              Name="OptionsPanel">
            <StackPanel>

                <ComboBox SelectionChanged="ComboBox_SelectionChanged_1"
                      Header="Results Per City"
                      Margin="15,0,15,10">
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="15"/>
                    <ComboBoxItem Content="20"/>
                </ComboBox>
                <ComboBox Tag="1" SelectionChanged="ComboBox_SelectionChanged"
                      Header="City 1"
                      Margin="15,0,15,10">
                    <ComboBoxItem Content="None"/>
                    <ComboBoxItem Content="Delhi" Tag="28.666667 77.216667"/>
                    <ComboBoxItem Content="Chennai" Tag="13.090994	80.224998"/>
                    <ComboBoxItem Content="Bangalore" Tag="12.983333 77.583333"/>
                    <ComboBoxItem Content="Kolkata" Tag="22.569722 88.369722"/>
                    <ComboBoxItem Content="Mumbai" Tag="18.975000 72.825833"/>
                </ComboBox>
                <ComboBox Tag="2" SelectionChanged="ComboBox_SelectionChanged"
                      Header="City 2"
                      Margin="15,0,15,10">
                    <ComboBoxItem Content="None"/>
                    <ComboBoxItem Content="Delhi" Tag="28.666667 77.216667"/>
                    <ComboBoxItem Content="Chennai" Tag="13.090994	80.224998"/>
                    <ComboBoxItem Content="Bangalore" Tag="12.983333 77.583333"/>
